{
  "name": "formative-saas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:templates": "node scripts/lint-templates.js",
    "precommit": "npm run lint:templates && npm run lint",
    "check-navbar": "! grep -r 'import.*[Hh]eader' app/ components/ --exclude-dir=node_modules || echo 'Found duplicate header imports'",
    "type-check": "tsc --noEmit",
    "setup": "chmod +x scripts/setup-codespaces.sh && ./scripts/setup-codespaces.sh",
    "db:generate": "supabase gen types typescript --local > types/supabase.ts",
    "db:reset": "supabase db reset --local",
    "db:push": "supabase db push",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "node test-e2e.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@stripe/stripe-js": "^7.4.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.5",
    "@types/handlebars": "^4.0.40",
    "axios": "^1.6.7",
    "clsx": "^2.1.1",
    "docx": "^8.5.0",
    "dotenv": "^17.2.0",
    "formidable": "^3.5.4",
    "framer-motion": "^12.23.3",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "lucide-react": "^0.525.0",
    "next": "^14.0.0",
    "openai": "^5.9.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-dropzone": "^14.3.8",
    "stripe": "^12.18.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-dropzone": "^4.2.2",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "puppeteer": "^24.12.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.8.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
